<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_verify2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradientback"
    tools:context="com.reservation.reservation.verify2">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView4"
        android:id="@+id/pin2"
        android:layout_centerHorizontal="true"
        android:hint="ПИН"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_bg" />

    <Button
        android:text="Потврди"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/confirmBtn2"
        android:layout_below="@+id/pin2"
        android:background="@drawable/rounded_but"
        android:layout_height="wrap_content" />



    <TextView
        android:text="Почитувани, вашиот профил не е верифициран. Ве молиме внесете го пинот кој ви го испративме."
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:textColor="#212121"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmBtn2"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="Не ви стигна пораката? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView5"
            android:textColor="#212121"
            />
        <TextView
            android:text="Препрати"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:id="@+id/resendBtn2"
            android:clickable="true"
            tools:textStyle="normal|bold"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

    <ImageView
        android:layout_width="65dp"
        android:id="@+id/logoViewv2"
        app:srcCompat="@drawable/logo192"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />


</RelativeLayout>
