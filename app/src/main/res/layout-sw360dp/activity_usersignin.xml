<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usersignin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reservation.reservation.usersignin"
    android:background="@drawable/animation_list">

    <Button
        android:text="Најави се"
        android:layout_below="@+id/lostpass"
        android:layout_marginTop="38dp"
        android:id="@+id/loginBtn"
        android:background="@drawable/rounded_but"
        android:layout_width="match_parent"
        android:textColor="#212121"
        android:textAlignment="gravity"
        android:layout_height="42dp"
        android:layout_alignRight="@+id/passTxt"
        android:layout_alignEnd="@+id/passTxt"
        android:layout_alignLeft="@+id/passTxt"
        android:layout_alignStart="@+id/passTxt" />

    <TextView
        android:text="Не си регистриран?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:textColor="#212121" />

    <Button
        android:text="Регистрирај се"
        android:layout_width="match_parent"
        android:id="@+id/goToReg"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/loginBtn"
        android:layout_alignEnd="@+id/loginBtn"
        android:layout_alignLeft="@+id/loginBtn"
        android:layout_alignStart="@+id/loginBtn"
        android:background="@drawable/rounded_but"
        android:textColor="#212121"
        android:textAlignment="gravity"
        android:layout_height="42dp" />

    <EditText
        android:inputType="textPassword"
        android:gravity="start"
        android:ems="10"
        android:hint=" Лозинка"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:minLines="1"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/passTxt"
        android:layout_width="match_parent"
        android:paddingTop="3.5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/phoneTxt"
        android:layout_alignLeft="@+id/phoneTxt"
        android:layout_alignStart="@+id/phoneTxt"
        android:textColor="#212121"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="#FFFFFF"
        android:background="@drawable/edittext_bg"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lostpass"
        android:textAlignment="center"
        android:text="Заборавена лозинка?"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_marginRight="-55dp"
        android:layout_marginLeft="102dp"
        android:layout_below="@+id/passTxt"
        android:layout_alignLeft="@+id/passTxt"
        android:layout_alignStart="@+id/passTxt"
        android:textColor="#212121" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/phoneTxt"
        android:hint=" Телефонски број"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:layout_marginTop="70dp"
        android:textColor="#212121"
        android:layout_below="@id/logoViewSign"
        android:textColorLink="?attr/actionMenuTextColor"
        android:backgroundTint="#FFFFFF"
        android:textAllCaps="false"
        android:textColorHighlight="#FFFFFF"
        android:background="@drawable/edittext_bg"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="70dp"
        android:id="@+id/logoViewSign"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/logo192" />


</RelativeLayout>
