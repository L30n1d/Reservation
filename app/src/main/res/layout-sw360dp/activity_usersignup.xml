<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usersignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reservation.reservation.usersignup"
    android:background="@drawable/gradientback">

    <EditText
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTxt"
        android:paddingLeft="9dp"
        android:layout_weight="1"
        android:lines="1"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:minLines="1"
        android:layout_marginTop="80dp"
        android:hint=" Име"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_bg"
        android:textColor="#212121"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="#FFFFFF" />

    <Button
        android:text=" Регистрирај се"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:id="@+id/regBtn"
        android:paddingLeft="9dp"
        android:layout_below="@+id/passTxtR"
        android:layout_alignRight="@+id/emailTxtR"
        android:layout_alignEnd="@+id/emailTxtR"
        android:layout_alignLeft="@+id/passTxtR"
        android:layout_alignStart="@+id/passTxtR"
        android:background="@drawable/rounded_but"
        android:textColor="#212121" />

    <EditText
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_weight="1"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:minLines="1"
        android:paddingLeft="9dp"
        android:id="@+id/lastNameTxt"
        android:hint=" Презиме"
        android:layout_below="@+id/nameTxt"
        android:layout_alignLeft="@+id/nameTxt"
        android:layout_alignStart="@+id/nameTxt"
        android:layout_alignRight="@+id/nameTxt"
        android:layout_alignEnd="@+id/nameTxt"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:textColor="#212121"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="#FFFFFF" />

    <EditText
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_weight="1"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:id="@+id/emailTxtR"
        android:paddingLeft="9dp"
        android:hint=" Е-пошта"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/lastNameTxt"
        android:layout_alignLeft="@+id/lastNameTxt"
        android:layout_alignStart="@+id/lastNameTxt"
        android:layout_alignRight="@+id/lastNameTxt"
        android:layout_alignEnd="@+id/lastNameTxt"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:textColor="#212121"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="#FFFFFF" />

    <EditText
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:layout_weight="1"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:id="@+id/phoneTxtR"
        android:paddingLeft="9dp"
        android:hint=" Телефонски број"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/emailTxtR"
        android:layout_alignLeft="@+id/emailTxtR"
        android:layout_alignStart="@+id/emailTxtR"
        android:layout_alignRight="@+id/emailTxtR"
        android:layout_alignEnd="@+id/emailTxtR"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:textColor="#212121"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="#FFFFFF" />

    <EditText
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_weight="1"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:minLines="1"
        android:id="@+id/passTxtR"
        android:paddingLeft="9dp"
        android:hint=" Лозинка"
        android:layout_below="@+id/phoneTxtR"
        android:layout_alignLeft="@+id/phoneTxtR"
        android:layout_alignStart="@+id/phoneTxtR"
        android:layout_alignRight="@+id/phoneTxtR"
        android:layout_alignEnd="@+id/phoneTxtR"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:textColor="#212121"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/regBtn"
        android:background="#212121"
        android:id="@+id/view1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginTop="1.5dp"
        android:textColor="#212121"
        android:text="Имаш профил?"
        android:layout_marginLeft="60dp"
        android:id="@+id/t1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/t1"
        android:textColor="#FFFFFF"
        android:layout_below="@id/view1"
        android:layout_marginLeft="3.5dp"
        android:text="Најави се"
        />

</RelativeLayout>
