<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reservation.reservation.verify"
    android:background="@drawable/gradientback">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/pin"
        android:layout_centerHorizontal="true"
        android:hint="ПИН"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_bg" />

    <Button
        android:text="Потврди"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/confirmBtn"
        android:layout_below="@+id/pin"

        android:layout_alignRight="@+id/pin2"
        android:layout_alignEnd="@+id/pin2"
        android:background="@drawable/rounded_but"
        android:layout_height="wrap_content" />



    <TextView
        android:text="Почитуван кориснику, вашиот профил не е верифициран. Затоа внесете го пинот кој ви го имаме испратено на вашиот mail."
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:textColor="#212121"
        android:textSize="14sp" />

    <TextView
        android:text="Успешна регистрација!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/textView11"
        android:textSize="25sp"
        android:textAlignment="center"
        tools:textStyle="bold"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmBtn"
        android:layout_centerHorizontal="true">
    <TextView
        android:text="Не ви стигна пораката? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView5"
        android:textColor="#212121"
        />
    <TextView
        android:text="Препрати"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:id="@+id/resendBtn"
        android:clickable="true"
        tools:textStyle="normal|bold"
        android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</RelativeLayout>
