<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_verify2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    tools:context="com.reservation.reservation.verify2">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/pininput"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView7" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="2.5dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:id="@+id/pin2"
        android:hint="ПИН"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="200dp" />

    <Button
        android:text="Потврди"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/confirmBtn2"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignRight="@+id/pin2"
        android:layout_alignEnd="@+id/pin2"
        android:background="?attr/colorButtonNormal"
        android:layout_height="26dp" />

    <TextView
        android:text="Не ви стигна пораката?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmBtn2"
        android:layout_marginTop="8dp"
        android:id="@+id/textView5"
        android:layout_alignLeft="@+id/confirmBtn2"
        android:layout_alignStart="@+id/confirmBtn2" />

    <TextView
        android:text="Препрати"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="13dp"
        android:id="@+id/resendBtn2"
        android:clickable="true"
        tools:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="Почитуван кориснику, вашиот профил не е верифициран. Затоа внесете го пинот кој ви го имаме испратено на вашиот mail."
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
