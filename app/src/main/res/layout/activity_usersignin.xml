<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usersignin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reservation.reservation.usersignin"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/im2"
        android:background="@drawable/userbahato"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_alignTop="@+id/etusername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/im3"
        android:background="@drawable/userpassbahato"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_alignTop="@+id/editText"
        android:layout_toLeftOf="@+id/etusername"
        android:layout_toStartOf="@+id/etusername" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Лозинка"
        android:layout_weight="1"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_marginBottom="219dp"
        android:paddingTop="7dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/im3"
        android:layout_toEndOf="@+id/im3" />

    <EditText
        android:id="@+id/etusername"
        android:hint="Телефонски број"
        android:layout_weight="1"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:backgroundTint="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:paddingTop="4dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/im3"
        android:layout_toRightOf="@+id/im2"
        android:layout_toEndOf="@+id/im2" />

    <Button
        android:text="Најави се"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im3"
        android:layout_marginTop="29dp"
        android:id="@+id/button5"
        android:layout_width="280dp"
        android:layout_alignLeft="@+id/im3"
        android:layout_alignStart="@+id/im3"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:text="Не си регистриран?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
