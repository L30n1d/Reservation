<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usersignin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reservation.reservation.usersignin"
    android:background="@drawable/gradientback">

    <ImageView
        android:id="@+id/im3"
        android:background="@drawable/pass11"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/passTxt"
        android:layout_toLeftOf="@+id/phoneTxtR"
        android:layout_toStartOf="@+id/phoneTxtR" />

    <Button
        android:text="Најави се"
        android:layout_below="@+id/im3"
        android:layout_marginTop="42dp"
        android:id="@+id/loginBtn"
        android:layout_alignRight="@+id/passTxt"
        android:layout_alignEnd="@+id/passTxt"
        android:background="@drawable/rounded"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/im3"
        android:layout_alignStart="@+id/im3"
        android:textColor="#212121"
        android:textAlignment="gravity"
        android:layout_height="42dp" />

    <TextView
        android:text="Не си регистриран?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:onClick="onClick"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:textColor="#212121" />

    <Button
        android:text="Регистрирај се"
        android:layout_width="wrap_content"
        android:id="@+id/goToReg"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/loginBtn"
        android:layout_alignEnd="@+id/loginBtn"
        android:layout_alignLeft="@+id/loginBtn"
        android:layout_alignStart="@+id/loginBtn"
        android:background="@drawable/rounded"
        android:textColor="#212121"
        android:textAlignment="gravity"
        android:layout_height="42dp" />

    <ImageView
        android:id="@+id/im2"
        android:background="@drawable/muda"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/phoneTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="33dp"
        android:layout_height="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/phoneTxt"
        android:hint=" Телефонски број"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/im2"
        android:layout_toEndOf="@+id/im2"
        android:layout_marginTop="115dp"
        android:textColor="?attr/actionMenuTextColor"
        android:textColorLink="?attr/actionMenuTextColor"
        android:backgroundTint="?attr/editTextBackground"
        android:textColorHint="#757575"
        android:textAllCaps="false"
        android:textColorHighlight="#FFFFFF"
        android:background="@drawable/edittext_bg" />

    <EditText
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:gravity="start"
        android:ems="10"
        android:hint=" Лозинка"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:minLines="1"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/passTxt"
        android:layout_width="wrap_content"
        android:paddingTop="6.5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/phoneTxt"
        android:layout_alignLeft="@+id/phoneTxt"
        android:layout_alignStart="@+id/phoneTxt"
        android:textColor="?attr/actionMenuTextColor"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHint="#757575"
        android:textColorHighlight="#FFFFFF"
        android:background="@drawable/edittext_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lostpass"
        android:textAlignment="center"
        android:text="Заборавена лозинка?"
        android:clickable="true"
        android:layout_marginTop="4.5dp"
        android:layout_marginLeft="66.5dp"
        android:layout_below="@+id/passTxt"
        android:layout_alignLeft="@+id/passTxt"
        android:layout_alignStart="@+id/passTxt"
        android:textColor="#212121" />

</RelativeLayout>
